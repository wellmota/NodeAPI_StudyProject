{
  "name": "node-api-study-project",
  "version": "1.0.0",
  "description": "A Node.js API study project with TypeScript and database support",
  "main": "dist/index.js",
  "engines": {
    "node": ">=23.0.0"
  },
  "scripts": {
    "build": "tsup src --out-dir build",
    "start": "node build/server.js",
    "dev": "tsx watch src/server.ts",
    "dev:watch": "ts-node-dev --respawn --transpile-only src/index.ts",
    "knex": "node --import tsx ./node_modules/.bin/knex",
    "migrate": "node --import tsx ./node_modules/.bin/knex migrate:latest",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "api",
    "database",
    "study"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@rocketseat/eslint-config": "^2.2.2",
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/knex": "^0.16.1",
    "@types/node": "^20.0.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.57.1",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "supertest": "^7.1.3",
    "ts-node": "^10.0.0",
    "ts-node-dev": "^2.0.0",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.0",
    "fastify": "^5.4.0",
    "helmet": "^7.0.0",
    "knex": "^3.1.0",
    "pg": "^8.16.3",
    "sqlite3": "^5.1.7",
    "zod": "^4.0.5"
  },
  "packageManager": "pnpm@10.1.0+sha512.c89847b0667ddab50396bbbd008a2a43cf3b581efd59cf5d9aa8923ea1fb4b8106c041d540d08acb095037594d73ebc51e1ec89ee40c88b30b8a66c0fae0ac1b"
}
